# Sol-Chat Backend Environment Configuration
# Rename this file to .env and fill in values

# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/sol-chat

# Session
SESSION_SECRET=super-secret-session-key

# LLM API Keys
OPENAI_API_KEY=sk-openai-api-key
GEMINI_API_KEY=google-gemini-api-key

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
CREDITS_TOKEN_MINT=credits-token-mint-address
BACKEND_WALLET_PRIVATE_KEY=backend-wallet-private-key-base58
TREASURY_WALLET=treasury-wallet-public-key

# OAuth - Google (optional)
GOOGLE_CLIENT_ID=google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=google-client-secret
GOOGLE_CALLBACK_URL=/api/auth/google/callback

# Frontend
FRONTEND_URL=http://localhost:5173

